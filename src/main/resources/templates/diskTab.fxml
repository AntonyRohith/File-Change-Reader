<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="diskAnchor" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fcr.gui.controller.DiskController">
   <children>
      <TableView fx:id="diskTable" layoutX="6.0" layoutY="6.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columns>
          	<TableColumn fx:id="name" minWidth="250.0" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="size" minWidth="80.0" prefWidth="75.0" style="-fx-alignment: CENTER-RIGHT;" text="Size" />
            <TableColumn fx:id="time" minWidth="120.0" prefWidth="75.0" style="-fx-alignment: CENTER-RIGHT;" text="Time Modified" />
            <TableColumn fx:id="path" minWidth="500.0" prefWidth="75.0" text="Path" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button fx:id="goButton" layoutX="534.0" layoutY="361.0" mnemonicParsing="false" onAction="#fetchData" text="Go" AnchorPane.bottomAnchor="14.0" AnchorPane.rightAnchor="15.0" />
      <DatePicker fx:id="datePicker" editable="false" layoutX="342.0" layoutY="361.0" promptText="Date" AnchorPane.bottomAnchor="14.0" AnchorPane.rightAnchor="80.0" />
      <TextField fx:id="searchBar" layoutX="46.0" layoutY="352.0" onKeyReleased="#search" promptText="Search" AnchorPane.bottomAnchor="14.0" AnchorPane.rightAnchor="300.0" />
      <ProgressIndicator fx:id="loader" layoutX="200.0" layoutY="200.0" prefHeight="20.0" prefWidth="20.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="80.0" />
      <Label text="Total Files :" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="10.0" />
      <Label fx:id="diskTotalFiles" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="80.0" />
   </children>
</AnchorPane>
