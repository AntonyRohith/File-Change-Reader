<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" focusTraversable="true"
	prefHeight="450.0" prefWidth="650.0"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="org.fcr.gui.controller.MainController">
	<children>
		<MenuBar VBox.vgrow="NEVER">
			<menus>
				<Menu mnemonicParsing="false" text="File">
					<items>
						<MenuItem fx:id="exportMenu" mnemonicParsing="false" text="Export" onAction="#exportCurrentTabData" />
						<MenuItem fx:id="exitMenu" mnemonicParsing="false" text="Quit" onAction="#exitApplication" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Help">
					<items>
						<MenuItem fx:id="aboutMenu" mnemonicParsing="false" text="About FCR" onAction="#aboutApplication" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
		<TabPane fx:id="tabPane" prefHeight="346.0" prefWidth="663.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
			<tabs>
				<Tab fx:id="diskTab" text="Disk" />
			</tabs>
		</TabPane>
	</children>
</VBox>
